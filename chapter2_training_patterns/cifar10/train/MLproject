name: cifar10_initial

docker_env:
  image: shibui/ml-system-in-actions:training_pattern_cifar10_initial_0.0.1
  volumes: ["$(pwd)/data:/opt/data", "/Users/shibuiyuusuke/book/ml-system-in-actions/chapter2_training_patterns/cifar10/mlruns:/tmp/mlruns"]

entry_points:
  train:
    parameters:
      upstream: {type: string, default: /opt/data/preprocess/}
      downstream: {type: string, default: /opt/data/model/}
      tensorboard: {type: string, default: /opt/data/tensorboard/}
      epochs: {type: int, default: 100}
      batch_size: {type: int, default: 32}
      num_workers: {type: int, default: 4}
      learning_rate: {type: float, default: 0.001}
      model_type: {type: string, default: vgg16}
    command: |
      python -m src.train \
        --upstream {upstream} \
        --downstream {downstream} \
        --tensorboard {tensorboard} \
        --epochs {epochs} \
        --batch_size {batch_size} \
        --num_workers {num_workers} \
        --learning_rate {learning_rate} \
        --model_type {model_type}